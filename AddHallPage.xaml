<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.AddHallPage"
             Title="Add Hall">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Add a Hall" FontSize="Large" HorizontalOptions="Center" />
        <Entry x:Name="HallNameEntry" Placeholder="Hall Name" />
        <Entry x:Name="CapacityEntry" Placeholder="Capacity" Keyboard="Numeric" />
        <Editor x:Name="LayoutEditor" Placeholder="Seat Layout (e.g., JSON format)" AutoSize="TextChanges" />
        <Button Text="Add Hall" Clicked="OnAddHallClicked" />
    </StackLayout>
</ContentPage>