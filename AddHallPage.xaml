<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.AddHallPage"
             Title="Add Hall">

    <StackLayout Padding="20" Spacing="10">
        <!-- Hall Name Entry -->
        <Entry x:Name="HallNameEntry" Placeholder="Hall Name" />

        <!-- Capacity Entry -->
        <Entry x:Name="CapacityEntry" Placeholder="Capacity" Keyboard="Numeric" />

        <!-- Use Default Layout Checkbox -->
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <CheckBox x:Name="UseDefaultLayoutCheckbox" />
            <Label Text="Use Default Layout" VerticalOptions="Center" />
        </StackLayout>

        <!-- Add Hall Button -->
        <Button Text="Add Hall"
                Clicked="OnAddHallClicked"
                BackgroundColor="Green"
                TextColor="White" />
    </StackLayout>
</ContentPage>
