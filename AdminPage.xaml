<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.AdminPage"
             Title="Admin Page">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Admin Dashboard" FontSize="Large" HorizontalOptions="Center" />

            <!-- Admin Actions Section -->
            <Button Text="Create Movie" Clicked="OnCreateMovieClicked" BackgroundColor="Green" TextColor="White" />
            <Button Text="Add Hall" Clicked="OnAddHallClicked" />
            <Button Text="View Reservations" Clicked="OnViewReservationsClicked" />
            <Button Text="Create Showtime" Clicked="OnCreateShowtimeClicked" BackgroundColor="Blue" TextColor="White" />
            <Button Text="View Showtimes" Clicked="OnViewShowtimesClicked" />
            <Button Text="View Halls" Clicked="OnViewHallsClicked" />
            
            <Label Text="Movies" FontSize="Medium" HorizontalOptions="Center" />
            <ListView x:Name="MoviesListView" ItemSelected="OnMovieSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Image Source="{Binding PhotoPath}" HeightRequest="100" WidthRequest="100" Aspect="AspectFill" />
                                <StackLayout Orientation="Vertical" Padding="10">
                                    <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold" />
                                    <Label Text="{Binding Genre}" FontSize="Small" />
                                    <Label Text="{Binding Duration, StringFormat='{0} minutes'}" FontSize="Small" />
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Hover Card -->
            <Frame x:Name="MovieDetailsFrame"
                   Padding="10"
                   BackgroundColor="LightGray"
                   BorderColor="Black"
                   HasShadow="True"
                   CornerRadius="10"
                   IsVisible="False"
                   VerticalOptions="End"
                   HorizontalOptions="Center">
                <StackLayout>
                    <Label x:Name="MovieDetailsTitle" FontSize="Large" FontAttributes="Bold" />
                    <Label x:Name="MovieDetailsGenre" FontSize="Small" />
                    <Label x:Name="MovieDetailsDuration" FontSize="Small" />
                    <Label x:Name="MovieDetailsDescription" FontSize="Small" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
