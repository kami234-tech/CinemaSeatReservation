<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.CreateMoviePage"
             Title="Add Movie">

    <StackLayout Padding="20" Spacing="10">
        <Entry x:Name="TitleEntry" Placeholder="Movie Title" />
        <Entry x:Name="GenreEntry" Placeholder="Genre" />
        <Entry x:Name="DurationEntry" Placeholder="Duration (in minutes)" Keyboard="Numeric" />
        <Editor x:Name="DescriptionEditor" Placeholder="Movie Description" HeightRequest="100" />
        
        <Button Text="Upload Photo" Clicked="OnUploadPhotoClicked" />
        <Image x:Name="SelectedImage" HeightRequest="200" Aspect="AspectFill" />

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

        <Button Text="Add Movie"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="OnAddMovieClicked" />
    </StackLayout>
</ContentPage>
