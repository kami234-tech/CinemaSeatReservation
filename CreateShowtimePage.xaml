<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.CreateShowtimePage"
             Title="Create Showtime">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Create a Showtime" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Select Movie" FontSize="Medium" />
        <Picker x:Name="MoviePicker" Title="Select Movie" />

        <Label Text="Select Hall" FontSize="Medium" />
        <Picker x:Name="HallPicker" Title="Select Hall" />

        <Label Text="Select Date" FontSize="Medium" />
        <DatePicker x:Name="ShowtimeDatePicker" />

        <Label Text="Select Time Slot" FontSize="Medium" />
        <!-- Picker for Time Slots -->
        <Picker x:Name="TimeSlotPicker" Title="Select Time Slot" />

        <Button Text="Create Showtime" Clicked="OnCreateShowtimeClicked" BackgroundColor="Green" TextColor="White" />
    </StackLayout>
</ContentPage>
