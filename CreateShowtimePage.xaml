<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.CreateShowtimePage"
             Title="Create Showtime">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Create Showtime" FontSize="Large" HorizontalOptions="Center" />

            <Picker x:Name="MoviePicker" Title="Select Movie" />
            <Picker x:Name="HallPicker" Title="Select Hall" />
            <DatePicker x:Name="DatePicker" />
            <TimePicker x:Name="TimePicker" />

            <Button Text="Create Showtime" Clicked="OnCreateShowtimeClicked" BackgroundColor="Blue" TextColor="White" />
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
        </StackLayout>
    </ScrollView>
</ContentPage>