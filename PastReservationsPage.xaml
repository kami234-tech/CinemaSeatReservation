<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.PastReservationsPage"
             Title="Past Reservations">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Past Reservations" FontSize="Large" HorizontalOptions="Center" />

        <!-- ListView to show past reservations -->
        <ListView x:Name="PastReservationsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding MovieTitle}" FontAttributes="Bold" />
                            <Label Text="{Binding HallName}" />
                            <Label Text="{Binding DateTime, StringFormat='{0:MM/dd/yyyy hh:mm tt}'}" />
                            <Label Text="{Binding Seats}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
