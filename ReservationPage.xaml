<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.ReservationPage"
             Title="Make a Reservation">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Make a Reservation" FontSize="Large" HorizontalOptions="Center" />
        <Label x:Name="MovieTitleLabel" FontSize="Medium" HorizontalOptions="Center" />
        <Picker x:Name="ShowtimePicker" Title="Select Showtime" SelectedIndexChanged="OnShowtimeSelected" />
        <Grid x:Name="SeatGrid" Padding="10" />
        <Button Text="Confirm Reservation" BackgroundColor="Green" TextColor="White" Clicked="OnConfirmClicked" />
    </StackLayout>
</ContentPage>
