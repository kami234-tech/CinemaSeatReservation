<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.ViewHallsPage"
             Title="View Halls">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Halls" FontSize="Large" HorizontalOptions="Center" />
        <ListView x:Name="HallsListView" ItemSelected="OnHallSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Capacity, StringFormat='Capacity: {0}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>