<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaSeatReservation.ViewReservationsPage"
             Title="Reservations">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="User Reservations" FontSize="Large" HorizontalOptions="Center" />
        <ListView x:Name="ReservationsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding MovieTitle}" FontAttributes="Bold" />
                            <Label Text="{Binding HallName}" />
                            <Label Text="{Binding DateTime, StringFormat='{0:MM/dd/yyyy hh:mm tt}'}" />
                            <Label Text="{Binding Seats}" />
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Button Text="Delete"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Clicked="OnDeleteButtonClicked" />
                                <Button Text="Done"
                                        BackgroundColor="Green"
                                        TextColor="White"
                                        Clicked="OnDoneButtonClicked" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
